import testing ;

project
    : requirements
      $(c11-requires)
      <source>../../extra/test_main.cpp
      <include>.
      <include>../../extra/include
    ;

local SOURCES =
    error.cpp
    socks_proto.cpp
    status.cpp
    string_view.cpp
    test_helpers.cpp
