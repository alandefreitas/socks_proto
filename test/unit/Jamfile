project
    : requirements
      $(c11-requires)
      <source>../../extra/test_main.cpp
      <include>.
      <include>../../extra/include
    ;

local SOURCES =
    io/connect_v4.cpp
    io/connect_v5.cpp
    address_type.cpp
    auth_method.cpp
    command.cpp
