project boost/socks_proto
    : requirements
      $(c11-requires)
      <link>shared:<define>BOOST_SOCKS_PROTO_DYN_LINK=1
      <link>static:<define>BOOST_SOCKS_PROTO_STATIC_LINK=1
      <define>BOOST_SOCKS_PROTO_SOURCE
    : usage-requirements
      <link>shared:<define>BOOST_SOCKS_PROTO_DYN_LINK=1
      <link>static:<define>BOOST_SOCKS_PROTO_STATIC_LINK=1
    : source-location ../src
    ;

alias socks_proto_sources
   : src.cpp
   ;

explicit socks_proto_sources ;

lib boost_socks_proto
   : socks_proto_sources
   ;

boost-install boost_socks_proto ;
